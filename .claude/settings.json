{
  "permissions": {
    "allow": [
      "Bash(uv run *)",
      "Bash(mise run *)",
      "Bash(ruff *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git show *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(gh api *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(.mise.local.toml)",
      "Read(**/*.key)",
      "Read(**/secrets/**)",
      "Read(**/*credential*)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(curl * | *)",
      "Bash(pip install *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(pyenv *)",
      "Bash(python3.14 *)"
    ],
    "additionalDirectories": []
  },
  "env": {
    "PYTHONDONTWRITEBYTECODE": "1"
  },
  "hooks": {
    "$ref": ".claude/hooks/hooks.json"
  },
  "respectGitignore": true
}
